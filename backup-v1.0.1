    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const binaryRain = document.getElementById('binary-rain');
            const screenWidth = window.innerWidth;
            // Decreased column spacing to make binary rain denser
            const columnSpacing = window.innerWidth < 768 ? 13 : 10; // Reduced spacing to increase density
            const numColumns = Math.floor(screenWidth / columnSpacing);
            
            // Create binary columns
            for (let i = 0; i < numColumns; i++) {
                createBinaryColumn(i);
            }
            
            function createBinaryColumn(index) {
                const column = document.createElement('div');
                column.className = 'binary-column';
                column.style.left = `${(index * columnSpacing) + Math.random() * 3}px`;
                
                // Animation duration
                const duration = 12 + Math.random() * 18;
                column.style.animationDuration = `${duration}s`;
                
                // Delayed start for cascade effect
                column.style.animationDelay = `${Math.random() * 5}s`;
                
                // Create binary content as separate spans
                let contentHTML = '';
                // Each column has different length
                const length = 25 + Math.floor(Math.random() * 40); // Increased length for denser rain
                
                // Decision on brighter column - maintaining the same number of bright columns
                const isBrighter = Math.random() < 0.2;
                if (isBrighter) {
                    column.style.opacity = '0.35';
                    column.style.textShadow = '0 0 3px var(--primary-blue)';
                }
                
                // Column pattern - some have more 1s than 0s and vice versa
                const pattern = Math.random() < 0.5 ? 0.3 : 0.7; // Probability of getting a 1
                
                for (let j = 0; j < length; j++) {
                    // Create 0 or 1 with probability according to pattern
                    const digit = Math.random() < pattern ? '1' : '0';
                    contentHTML += `<span class="binary-digit">${digit}</span>`;
                }
                
                column.innerHTML = contentHTML;
                
                // Different speeds - some columns move faster than others
                if (Math.random() < 0.3) {
                    column.style.animationDuration = `${duration * 0.8}s`; // 20% faster
                }
                
                binaryRain.appendChild(column);
            }
        });
