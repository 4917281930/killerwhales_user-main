            animation: rain linear infinite;
            display: flex;
            flex-direction: column;
            align-items: center;
            letter-spacing: 0;
            line-height: 1;
        }
        
        @keyframes rain {
            0% {
                transform: translateY(-100%);
            }
            100% {
                transform: translateY(100vh);
            }
        }
        
        .binary-digit {
            display: block;
            margin: 0;
            padding: 0;
        }
        
        /* Bottom links section */
        .bottom-links {
