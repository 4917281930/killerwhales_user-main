        .telegram-icon:hover {
            transform: scale(1.1);
            filter: drop-shadow(0 0 7px var(--primary-blue)); /* Reduced from 10px */
        }
        
        .vhs-effect {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: repeating-linear-gradient(
                0deg,
                rgba(0, 0, 0, 0.15),
                rgba(0, 0, 0, 0.15) 1px,
                transparent 1px,
                transparent 2px
            );
            pointer-events: none;
            z-index: 10;
            opacity: 0.3;
        }
        
        .noise::before {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            content: "";
            opacity: 0.04; /* Reduced from 0.05 */
            z-index: 1000;
            pointer-events: none;
            background-image: url("data:image/png;base64,");
            animation: noise .2s infinite;
        }

        @keyframes noise {
            0%, 100% { transform: translate(0, 0) }
            10% { transform: translate(-1px, -1px) }
            20% { transform: translate(1px, 1px) }
            30% { transform: translate(-1px, 1px) }
            40% { transform: translate(1px, -1px) }
            50% { transform: translate(-1px, -1px) }
            60% { transform: translate(1px, 1px) }
            70% { transform: translate(-1px, 1px) }
            80% { transform: translate(1px, -1px) }
            90% { transform: translate(-2px, -2px) }
        }
        
        /* Enhanced binary rain effect - increased density */
        .binary-rain {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 5;
            overflow: hidden;
        }
        
        .binary-column {
            position: absolute;
            top: -20%;
            color: var(--primary-blue);
            font-family: monospace;
            font-size: 14px;
            opacity: 0.25; /* Maintained the same brightness */
