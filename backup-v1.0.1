        @import url('https://fonts.googleapis.com/css2?family=VT323&family=Press+Start+2P&display=swap');
        
        :root {
            --primary-blue: #00cece; /* Reduced brightness from #00ffff */
            --dark-blue: #003366;
            --mid-blue: #0099cc;
            --light-blue: #55b8e6; /* Reduced brightness from #66ccff */
            --bg-color: #000033;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            background-color: var(--bg-color);
            color: var(--primary-blue);
            font-family: 'VT323', monospace;
            line-height: 1.6;
            overflow-x: hidden;
