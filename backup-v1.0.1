        }
        
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            position: relative;
        }
        
        .glitch-wrapper {
            position: relative;
            text-align: center;
            margin-bottom: 40px;
        }
        
        .glitch {
            font-family: 'Press Start 2P', monospace;
            font-size: 2.5rem; /* Reduced from 3rem for better mobile display */
            text-transform: lowercase;
            position: relative;
            color: var(--primary-blue);
            letter-spacing: 3px;
            text-shadow: 
                0 0 3px var(--primary-blue),
                0 0 7px var(--primary-blue); /* Reduced glow intensity */
            animation: glitch 2s infinite;
        }
        
        @keyframes glitch {
            0% { transform: translate(0); }
            20% { transform: translate(-2px, 2px); }
            40% { transform: translate(-2px, -2px); }
            60% { transform: translate(2px, 2px); }
            80% { transform: translate(2px, -2px); }
            100% { transform: translate(0); }
        }
        
        .scanline {
            width: 100%;
            height: 5px;
            background-color: var(--primary-blue);
            opacity: 0.2; /* Reduced from 0.3 */
            position: absolute;
            top: 50%;
            animation: scanline 6s linear infinite;
        }
        
        @keyframes scanline {
            0% { top: 0%; }
            100% { top: 100%; }
        }
        
        .profile-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 40px;
            position: relative;
            background-color: rgba(0, 10, 30, 0.7);
            padding: 30px;
            border: 2px solid var(--mid-blue);
            box-shadow: 0 0 8px var(--primary-blue), inset 0 0 15px rgba(0, 206, 206, 0.15); /* Reduced intensity */
        }
        
        .profile-box {
